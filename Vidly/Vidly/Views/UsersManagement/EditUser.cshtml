                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.User.LockoutEnabled) Lockout Enabled ?
                        </label>
                        @Html.ValidationMessageFor(model => model.User.LockoutEnabled, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.CanManageMovies) Can Manage Movies ?
                        </label>
